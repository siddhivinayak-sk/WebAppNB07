<tiles-definitions>
  <definition name="layout/*" template="/WEB-INF/layouts/layout-{1}.jspx">
    <put-attribute name="header" value="/WEB-INF/views/{1}/header.jspx" />
    <put-attribute name="menu" value="/WEB-INF/views/{1}/menu.jspx" />
    <put-attribute name="common" value="/WEB-INF/views/common.jspx" />
    <put-attribute name="footer" value="/WEB-INF/views/{1}/footer.jspx" />
  </definition>
</tiles-definitions>
